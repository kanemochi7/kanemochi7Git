<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.kanemochi.dao.GKMapper">

	<select id="getRecord" parameterType="String" resultType="RecordVO">
		select user_id,TO_CHAR(record_date,'YYYY-MM-DD')record_date,category from record where user_id = #{id}
	</select>
	
	
	<select id="getDayRecord" parameterType="map" resultType="RecordVO">
		select * from record where user_id = #{id} and record_date = #{date}
	</select>
	
</mapper>
